---
import type { CollectionEntry } from 'astro:content';
import { SquareArrowOutUpRight } from 'lucide-react';

interface Props {
  entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props;
const { name, description, techStack, link } = entry.data;
---

<div class="group flex flex-col gap-2 p-1 -mx-1 rounded-lg hover:bg-zinc-50 dark:hover:bg-zinc-900/50 transition-colors duration-300">
  <div class="flex items-center gap-2">
    <h3 class="font-medium text-zinc-900 dark:text-zinc-100">{name}</h3>
    {link && (
      <a href={link} target="_blank" rel="noopener noreferrer" class="text-zinc-400 dark:text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors">
        <SquareArrowOutUpRight size={14} strokeWidth={1.5} />
      </a>
    )}
  </div>
  <p class="text-sm text-zinc-500 dark:text-zinc-400 leading-relaxed max-w-prose">
    {description}
  </p>
  <div class="flex flex-wrap gap-1.5">
    {techStack.map((tech) => (
      <span class="text-xs text-zinc-500 dark:text-zinc-400 bg-zinc-100 dark:bg-zinc-800/50 px-1.5 py-0.5 rounded-md font-mono">
        {tech}
      </span>
    ))}
  </div>
</div>

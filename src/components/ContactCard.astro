---
interface Props {
  text: string;
  href: string;
  icon?: any;
}

const { text, href } = Astro.props;
---
<a 
  href={href} 
  target="_blank"
  rel="noopener noreferrer"
  class="group relative flex items-center justify-between p-6 bg-slate-900/50 border border-slate-800 rounded-lg hover:border-accent/50 transition-all duration-300 hover:shadow-[0_0_20px_-5px_var(--color-accent-glow)] overflow-hidden"
>
  <div class="z-10 flex items-center gap-3">
    <slot name="icon" />
    <span class="font-medium text-slate-200 group-hover:text-white transition-colors">{text}</span>
  </div>
  <div class="z-10 text-slate-600 group-hover:text-accent transition-colors transform group-hover:translate-x-1 duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
  </div>
  <!-- Subtle gradient background effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full group-hover:animate-[shimmer_1.5s_infinite] opacity-0 group-hover:opacity-100"></div>
</a>
